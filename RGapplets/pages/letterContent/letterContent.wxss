.write-letter-box{
  height: 100vh;
  position: relative;
  background-repeat: no-repeat;
  background-size: 100% 100%;
}

.back-box{
  display: flex;
  align-items: center;
  font-size: 35rpx;
  padding: 0 20rpx;
}
.back-title{
  margin: 0 0 0 18rpx;
}

.letter-content{
  padding: 30rpx;
  font-size: 32rpx;
  color: #1f1e1e;
  position: absolute;
  left: 0;
  bottom: 0;
  right: 0;
  display: flex;
  flex-wrap: wrap;
  align-items: flex-start;
  flex-direction: column;
}
.title-box{
  width: 100%;
}
.title-input{
  text-align: center;
}
.text-box{
  /* border: 1rpx solid red; */
  margin: 20rpx 0 0 0;
  flex: 1;
  width: 100%;
  overflow-y: auto;
  line-height: 55rpx;
}
.text-input{
  width: 100%;
  font-size: 32rpx;
}
.from-name{
  text-align: right;
}
.time-box{
  text-align: right;
}

.send-btn-box{
  width: 100%;
  display: flex;
  justify-content: center;
}
.send-btn{
  padding: 15rpx 100rpx;
  font-size: 35rpx;
  color: white;
  border-radius: 30rpx;
  background-color: #A55752;
  margin: 30rpx 0 0 0;
}
