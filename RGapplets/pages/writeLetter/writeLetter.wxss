.write-letter-box{
  min-height: 100vh;
  position: relative;
  background-repeat: no-repeat;
  background-size: 100% 100%;
}

.back-box{
  display: flex;
  align-items: center;
  font-size: 35rpx;
  padding: 0 20rpx;
}
.back-title{
  margin: 0 0 0 18rpx;
}

.letter-content{
  padding: 30rpx;
  overflow: auto;
  font-size: 32rpx;
  color: #1f1e1e;
  position: absolute;
  left: 0;
  bottom: 0;
  right: 0;
  display: flex;
  flex-wrap: wrap;
  flex-direction: column;
  align-items: flex-start;
}
.title-box{
  display: flex;
  align-items: center;
  flex-direction: row;
  width: 100%;
}
.title-input{
  border-bottom: 2rpx solid rgb(31, 30, 30);
  flex-grow: 1;
}
.to-name{
  margin: 15rpx 0 0 0;
}
.text-box{
  margin: 20rpx 0 0 0;
  flex-grow: 1;
  width: 100%;
}
.text-input{
  width: 100%;
  height: 100%;
  font-size: 32rpx;
  line-height: 55rpx;
}

.send-btn-box{
  width: 100%;
  display: flex;
  justify-content: center;
}
.save-btn{
  margin: 30rpx 100rpx 0 0 !important;
}
.send-btn{
  padding: 15rpx 80rpx;
  font-size: 35rpx;
  color: white;
  border-radius: 30rpx;
  background-color: #A55752;
  margin: 30rpx 0 0 0;
}
