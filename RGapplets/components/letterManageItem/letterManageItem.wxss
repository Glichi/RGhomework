.item-manage{
  position: relative;
  display: flex;
  padding: 30rpx 20rpx;
  justify-content: space-between;
  background-color: white;
  margin: 0 0 20rpx 0;
  height: 150rpx;
}

.new-state{
  width: 0;
  height: 0;
  border: 25rpx solid;
  border-color: #a53027 #a53027 transparent transparent;
  position: absolute;
  top: 0;
  right: 0;
}

.left-box{
  display: flex;
  flex-wrap: wrap;
  align-content: space-between;
  width: 360rpx;
}
.title-box{
  font-size: 35rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 100%;
}
.left-down{
  font-size: 28rpx;
  width: 100%;
}
.time-box{
  margin: 10rpx 0 0 0;
}

.right-box{
  display: flex;
  align-content: center;
}
.envelope-box{
  height: 100%;
  width: 220rpx;
  margin: 0 30rpx 0 0;
}
.envelope-image{
  width: 100%;
  height: 100%;
}
.arrow-box{
  display: flex;
  align-items: center;
}